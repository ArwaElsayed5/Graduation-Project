<odoo>
  <record id="view_slotting_result_list" model="ir.ui.view">
    <field name="name">slotting.result.list</field>
    <field name="model">slotting.result</field>
    <field name="arch" type="xml">
      <list string="Slotting Results">
        <field name="item_id"/>
        <field name="slot_id"/>
        <field name="score"/>
        <field name="timeframe"/>
      </list>
    </field>
  </record>

  <record id="view_slotting_result_form" model="ir.ui.view">
    <field name="name">slotting.result.form</field>
    <field name="model">slotting.result</field>
    <field name="arch" type="xml">
      <form string="Slotting Result">
        <sheet>
          <group>
            <field name="item_id"/>
            <field name="slot_id"/>
            <field name="score"/>
            <field name="timeframe"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_slotting_result" model="ir.actions.act_window">
    <field name="name">Slotting Results</field>
    <field name="res_model">slotting.result</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        No results yet. Run the slotting optimization to see results here.
      </p>
    </field>
  </record>

    <menuitem id="menu_dynamic_slotting_root" name="Dynamic Slotting" sequence="10"/>

<menuitem id="menu_slotting_results" name="Slotting Results"
          parent="menu_slotting_root"
          action="action_slotting_result"/>

</odoo>
